<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLBanSach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/QLBanSach.styles.css" asp-append-version="true" />
    <link href="~/css/layout.css" rel="stylesheet" />

</head>
<body>
    @if (TempData["Message"] != null)
    {
        var type = TempData["MesseType"]?.ToString() ?? "success";
        <div id="toast-messe" class="toast-messe @type">
            @TempData["Message"]
        </div>
    }
    <div class="topbar d-flex justify-content-between">
        <div>
            <span>0999999999</span>
            <span>uneti@gmail.com</span>
            <span>218 Lĩnh Nam, Hà Nội</span>
        </div>
        <div>
            <ul class="navbar-nav ms-auto flex-row">
                @if (Context.Session.GetString("UserName") != null)
                {
                    var isAdmin = Context.Session.GetString("VaiTro") == "True";

                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Details" method="post">
                            <input type="hidden" name="id" value="@Context.Session.GetString("UserId")" />
                            <button type="submit" class="nav-btn ms-2">
                                Xin chào, @Context.Session.GetString("UserName")
                            </button>
                        </form>
                    </li>

                    @if (isAdmin)
                    {
                        <li class="nav-item ms-2">
                            <a class="nav-btn btn btn-warning" href="@Url.Action("Index", "Admin")">
                                Quản lý
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-2">
                            <form method="get" action="@Url.Action("Index", "GioHang")" class="d-inline">
                                <input type="hidden" name="id" value="@Context.Session.GetString("UserId")" />

                                <button type="submit" class="nav-btn btn btn-primary">
                                    Giỏ hàng
                                </button>
                            </form>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-btn btn btn-  success" href="@Url.Action("Orders", "Order")">
                                Đơn hàng
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="nav-btn ms-2">
                                Đăng xuất
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item me-3">
                        <button class="nav-btn"
                                onclick="window.location.href='@Url.Action("Login", "Account")'">
                            Đăng nhập
                        </button>
                    </li>

                    <li class="nav-item">
                        <button class="nav-btn"
                                onclick="window.location.href='@Url.Action("Create", "Account")'">
                            Đăng ký
                        </button>
                    </li>
                }
            </ul>

        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                <form class="d-flex mx-auto" asp-action="Index" asp-controller="Home" method="get"
                      style="width:60%; max-width:600px; position:relative;">

                    <div class="floating-group me-2" style="width:100%;">
                        <input type="text" id="TenSach" name="TenSach"
                               class="form-control floating-input"
                               placeholder=" ">
                        <label for="TenSach" class="floating-label">Tìm kiếm sản phẩm</label>
                    </div>

                    <button class="btn btn-primary ms-2" style="height:48px; font-size:16px; width:140px;">
                        Tìm kiếm
                    </button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - QLBanSach - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const toast = document.getElementById('toast-messe');
            if (toast) {
                toast.classList.add('show');
                setTimeout(() => toast.classList.remove('show'), 3000);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
