<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - QLBanSach</title>

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background: #EAF3FF;
            font-family: "Segoe UI", Arial, sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* KHUNG CHÍNH (PHÓNG TO) */
        .login-wrapper {
            width: 1100px;           /* TĂNG TỪ 950px */
            height: 650px;           /* TĂNG TỪ 560px */
            background: white;
            border-radius: 28px;
            display: flex;
            overflow: hidden;
            box-shadow: 0px 20px 55px rgba(0, 0, 0, 0.28);
            animation: fadeIn 0.55s ease;
        }

        /* LEFT SIDE */
        .left-box {
            width: 45%;
            background: linear-gradient(135deg, #4C8DFF, #2F6BFF);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            position: relative;
        }

        .left-box i {
            font-size: 170px; /* lớn hơn */
            opacity: 0.92;
            filter: drop-shadow(0 5px 10px rgba(0,0,0,0.2));
            color: #ffffff
        }

        .left-title {
            font-size: 48px; /* lớn hơn */
            font-weight: bold;
            margin-top: 25px;
            text-shadow: 0px 3px 8px rgba(0,0,0,0.25);
        }

        .left-box p {
            margin-top: 12px;
            font-size: 19px;
            opacity: 0.95;
        }

        /* RIGHT SIDE */
        .right-box {
            width: 55%;
            padding: 70px 65px; /* nới rộng padding */
            background: #ffffff;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Back Home */
        .back-home {
            position: absolute;
            top: 25px;
            left: 25px;
            font-size: 20px;
            font-weight: 600;
            color: #2F6BFF;
            text-decoration: none;
            z-index: 10;
            transition: 0.2s ease;
        }

        .back-home:hover {
            color: blue;
            transform: translateX(-3px);
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .my-toast {
            position: fixed;
            top: -80px;
            left: 50%;
            transform: translateX(-50%);
            padding: 16px 30px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            color: black;
            z-index: 9999;
            display: flex;
            align-items: center;
            gap: 12px;
            min-width: 320px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.25);
            background-color: rgba(255, 255, 255);
            transition: all 0.6s ease;
        }

            .my-toast.show {
                top: 20px;
                opacity: 1;
            }

            .my-toast i {
                font-size: 20px;
            }

        .toast-blue {
            background: #1e90ff; /* Màu xanh sáng nổi bật */
            border-left: 6px solid #0e59b8; /* Tạo chiều sâu */
            color: #ffffff;
            box-shadow: 0 10px 25px rgba(30, 144, 255, 0.45); /* Glow xanh */
        }


        .toast-close {
            margin-left: auto;
            font-size: 20px;
            cursor: pointer;
            opacity: 0.85;
        }

            .toast-close:hover {
                opacity: 1;
            }

    </style>
</head>
<body>
    @if (TempData["Message"] != null)
    {
        <div id="toastMessage" class="my-toast @TempData["MessageType"]">
            <i class="fa-solid fa-circle-info"></i>
            @TempData["Message"]
            <span class="toast-close">&times;</span>
        </div>
    }
    <!-- NÚT TRANG CHỦ -->
    <a href="@Url.Action("Index", "Home")" class="back-home">
        <i class="fa-solid fa-arrow-left"></i> Trang chủ
    </a>

    <!-- KHUNG -->
    <div class="login-wrapper">

        <!-- LEFT -->
        <div class="left-box">
            <i class="fa-solid fa-circle-user"></i>

            <div class="left-title">
                WebSach<span style="color: #dff4ff;">.com</span>
            </div>

            <p>Xin chào!</p>
        </div>

        <!-- RIGHT: Render form -->
        <div class="right-box">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>
<script>
    window.onload = function () {
        const toast = document.getElementById("toastMessage");

        if (toast) {
            // Hiện thông báo
            setTimeout(() => {
                toast.classList.add("show");
            }, 100);

            // Tự động ẩn sau 3.5s
            setTimeout(() => {
                toast.classList.remove("show");
            }, 3500);

            // Bấm nút X để ẩn
            toast.querySelector(".toast-close").onclick = function () {
                toast.classList.remove("show");
            };
        }
    };
</script>